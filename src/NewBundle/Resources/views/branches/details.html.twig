<h1>{{ branch.title }}</h1>
<div>{{ branch.description }}</div>
<h3>statistic:</h3>
<table border="1" cellpadding="5">
    <tr>
        <th>Avg mark of branch</th>
        <td>{{ avg }}</td>
    </tr>
    <tr>
        <th>Group count</th>
        <td>{{ branch.parties.count }}</td>
    </tr>
    <tr>
        <th>Student count</th>
        <td>{{ studentCount }}</td>
    </tr>
    {% for top in tops %}
    <tr>
        <th>Top students</th>
        <td>{{ top.name }} ------- {{ top.avg_mark }}</td>
    </tr>
    {% endfor %}
</table>
<h3>Groups:</h3>
<table border="1" cellpadding="5">
    {% for party in branch.parties %}
        <tr>
            <td><a href="{{ path('party_details', {id: party.id}) }}">{{ party.title }}</a></td>
        </tr>
    {% endfor %}
</table>
<br>
<a href="{{ path('college_details', {id: branch.college.id}) }}">Back</a>
